{
  "firebase": "sinanbolel",
  "public": "./public",
  "ignore": [
    "firebase.json",
    "**/.*",
    "**/node_modules",
    "**/bower_components",
    "public/src"
  ],
  "headers": [ {
    "source" : "**/*.@(eot|otf|ttf|ttc|woff|font.css)",
    "headers" : [ {
      "key" : "Access-Control-Allow-Origin",
      "value" : "*"
    } ]
  }, {
    "source" : "**/*.@(jpg|jpeg|gif|png)",
    "headers" : [ {
      "key" : "Cache-Control",
      "value" : "max-age=86400"
    } ]
  } ],
  "redirects": [ {
    "source" : "/home.html",
    "destination" : "/",
    "type" : 301
  }, {
    "source" : "/home",
    "destination" : "https://www.thinkcrazy.co",
    "type" : 301
  } ]
}
