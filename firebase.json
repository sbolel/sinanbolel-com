{
  "rules": "config/security-rules.json",
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/node_modules/**",
      "assets/css/",
      "projects/"
    ],
    "headers": [ {
      "source" : "**/*.@(svg|jpg|jpeg|gif|png)",
      "headers" : [ {
        "key" : "Cache-Control",
        "value" : "max-age=2592000"
      } ]
    } , {
      "source" : "**/*.@(eot|ttf|woff|css)",
      "headers" : [ {
        "key" : "Cache-Control",
        "value" : "max-age=2592000"
      } ]
    } , {
      "source" : "**/*.@(html|pdf)",
      "headers" : [ {
        "key" : "Cache-Control",
        "value" : "max-age=0"
      } ]
    }],
    "redirects": [ {
      "source" : "/home",
      "destination" : "https://sinanbolel.com/",
      "type" : 301
    }, {
      "source" : "/resume",
      "destination" : "https://goo.gl/FC3aiq",
      "type" : 302
    }]
  }
}
